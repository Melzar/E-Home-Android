            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginBottom="@dimen/default.padding.xlarge"-->
            <!--android:src="@drawable/logo_ehome"-->
            <!--/>-->
        <android.support.v7.widget.AppCompatTextView
            style="@style/Logo"
            android:id="@+id/login_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="gravity"
            android:text="@string/login.logo"
            />
        <android.support.v7.widget.AppCompatTextView
            style="@style/Label.Black.Primary"
            android:id="@+id/login_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_logo"
            android:layout_marginBottom="@dimen/content.bottom.space"
            android:gravity="center"
            android:textAlignment="gravity"
            android:text="@string/login.welcome.primary"
            />
        <android.support.v7.widget.AppCompatTextView
            style="@style/Label.Black.Secondary"
            android:id="@+id/login_welcome_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_welcome"
            android:layout_marginBottom="@dimen/default.padding.medium"
            android:gravity="center"
            android:textAlignment="gravity"
            android:text="@string/login.welcome.secondary"
            />
        <EditText
            style="@style/Input.LightBackground"
            android:id="@+id/input_login"
            android:hint="@string/login.login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_welcome_description"
            android:inputType="textNoSuggestions"
            android:background="@drawable/editext_border"
            />
        <EditText
            style="@style/Input.LightBackground"
            android:id="@+id/input_password"
            android:hint="@string/login.password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_login"
            android:inputType="textPassword|textNoSuggestions"
            android:fontFamily="sans-serif"
            android:background="@drawable/editext_border"
            />
        <Button
            style="@style/Button.Primary"
            android:id="@+id/button_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_password"
            android:text="@string/login.button.signin"
            />
        <TextView
            style="@style/Label.White"
            android:layout_below="@id/button_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login.button.forgotPassword"
            />
    </RelativeLayout>
