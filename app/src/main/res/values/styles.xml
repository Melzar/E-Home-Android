<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar related styles -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="navigationIcon">?homeAsUpIndicator</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <!-- Layouting related styles -->
    <style name="BaseLayout">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="BaseLayout.NoPadding">
        <item name="android:background">@color/backgroundColorLight</item>
    </style>

    <style name="BaseLayout.RightPadding">
        <item name="android:paddingRight">@dimen/default.padding.medium</item>
    </style>

    <style name="BaseLayout.ContentPadding">
        <item name="android:paddingTop">@dimen/content.top.space</item>
        <item name="android:paddingLeft">@dimen/content.left.space</item>
        <item name="android:paddingRight">@dimen/content.right.space</item>
        <item name="android:paddingBottom">@dimen/content.bottom.space</item>
    </style>

    <style name="BaseLayout.ContentPadding.Scrollable">
        <item name="android:paddingBottom">@dimen/content.no.space</item>
    </style>

    <!-- Button styles -->
    <style name="Button">
    </style>

    <style name="Button.Primary">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginBottom">@dimen/default.padding.medium</item>
    </style>

    <!-- Input styles -->
    <style name="Input" parent="@android:style/Widget.EditText">

    </style>

    <style name="Input.LightBackground">
        <item name="android:minHeight">51dp</item>
        <item name="android:paddingLeft">@dimen/default.padding.small</item>
        <item name="android:background">@color/whiteColor</item>
        <item name="android:textColor">@color/primaryColorDark</item>
        <item name="android:textColorHint">@color/placeholderColor</item>
        <item name="android:layout_marginBottom">@dimen/default.padding.medium</item>
    </style>

    <style name="Input.Header">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="Input.Header.Head">
        <item name="android:paddingTop">@dimen/default.padding.medium</item>
        <item name="android:paddingBottom">@dimen/default.padding.medium</item>
        <item name="android:textSize">@dimen/input.head</item>
    </style>

    <style name="Input.Header.Subhead">
        <item name="android:textSize">@dimen/input.subhead</item>
        <item name="android:textColor">@color/whiteColor70</item>
    </style>

    <!-- Label styles -->
    <style name="Label">

    </style>

    <style name="Label.White">
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="Label.Primary">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Label.Primary.Button">
        <item name="android:height">51dp</item>
    </style>

    <!-- Horizontal line styles -->
    <style name="HorizontalLine">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginTop">@dimen/divider.horizontal.top.space</item>
        <item name="android:layout_marginBottom">@dimen/divider.horizontal.bottom.space</item>
    </style>

    <!-- Tabs styles -->
    <style name="Tabs">
        <item name="android:background">@color/primaryColor</item>
    </style>




</resources>
