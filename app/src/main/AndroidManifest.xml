<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecode.ehome">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".container.EHomeContainer"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BaseActivity"
            android:label="" />
        <activity
            android:name=".activity.dashboard.DashboardActivity"
            android:label="@string/dashboard" />
        <activity
            android:name=".activity.BaseDrawerActivity"
            android:label="" />
        <activity android:name=".activity.accomodation.AccomodationActivity" />
        <activity android:name=".activity.accomodation.SpaceActivity" />
        <activity android:name=".activity.accomodation.ControlActivity"></activity>
    </application>

</manifest>